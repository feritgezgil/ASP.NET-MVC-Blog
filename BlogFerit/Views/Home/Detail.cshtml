@model BlogFerit.Models.ArticleViewModel
@{ Layout = "~/Views/Shared/_Layout.cshtml"; }
<!-- post-content-area-start -->
<div class="post-content-area ptb-80 standard-post" style="padding: 20px 0;
        box-shadow: none;
">
    <div class="container">
        <div class="row" style="        background-color: white;
        border-radius: 10px;
        box-shadow: 0px 0px 4px 0px #888888;
        margin-right: 10px;
        padding-bottom: 10px;">
            <div class="col-lg-9 col-md-9 col-sm-12 col-xs-12" >
                <div class="section-title text-center">
                    <h4 class="text-uppercase">@Model.ArticleCategory</h4>
                    <h3>@Model.Title</h3>
                    <span>@Model.ArticleDate</span>
                </div>
                <div class="post-top">
                    <div class="post-top-info">
                        <p>@Html.Raw(@Model.Content)</p>
                    </div>

                    <div class="feature-post-btn mtb-40">
                        <ul>
                            @foreach (var item in Model.ArticleTags)
                            {
                <li><a href="#">@item</a></li>}
                        </ul>
                    </div>
                    <div class="post-top-footer">
                        <div class="post-top-social floatright">
                            <span>Share:</span>
                            <a href="#"><i class="fa fa-facebook"></i></a>
                            <a href="#"><i class="fa fa-twitter"></i></a>
                            <a href="#"><i class="fa fa-instagram"></i></a>
                            <a href="#"><i class="fa fa-google-plus"></i></a>
                        </div>
                    </div>
                </div>
                <div class="feature-author fix mtb-50">
                    <div class="author-img-2">
                        <img src="@Model.AuthorImageUrl" alt="" />
                    </div>
                    <div class="author-text">
                        <div class="author-title">
                            <h3>@Model.AuthorName</h3>
                        </div>
                        <p>@Html.Raw(@Model.AuthorAbout.Substring(0,250)) ... </p>
                        <div class="author-icon">
                            <a href="@Model.AuthorGithub"><i class="fa fa-github"></i></a>
                            <a href="@Model.AuthorLinkedin"><i class="fa fa-linkedin"></i></a>
                            <a href="@Model.AuthorFacebook"><i class="fa fa-facebook"></i></a>
                        </div>
                    </div>
                </div>
                <div class="feature-another-post">
                    <div class="row">
                        <div class="col-xs-12 text-center">
                            <h5 class="leads">Bunları da Okumak İster misiniz?</h5>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-sm-4">
                            <div class="single-post">
                                <div class="single-post-img">
                                    <img src="~/Content/img/blog/1.jpg" />
                                </div>
                                <div class="single-post-text">
                                    <ul>
                                        <li><a href="#"><i class="fa fa-clock-o"></i> Aug 8,2016</a></li>
                                        <li><a href="#"><i class="fa fa-commenting-o"></i> 500</a></li>
                                        <li><a href="#"><i class="fa fa-eye"></i> 1928</a></li>
                                    </ul>
                                </div>
                            </div>
                        </div>
                        <div class="col-sm-4">
                            <div class="single-post">
                                <div class="single-post-img">
                                    <img src="~/Content/img/blog/2.jpg" />
                                </div>
                                <div class="single-post-text">
                                    <ul>
                                        <li><a href="#"><i class="fa fa-clock-o"></i> Aug 8,2016</a></li>
                                        <li><a href="#"><i class="fa fa-commenting-o"></i> 500</a></li>
                                        <li><a href="#"><i class="fa fa-eye"></i> 1928</a></li>
                                    </ul>
                                </div>
                            </div>
                        </div>
                        <div class="col-sm-4">
                            <div class="single-post">
                                <div class="single-post-img">
                                    <img src="~/Content/img/blog/4.jpg" />
                                </div>
                                <div class="single-post-text">
                                    <ul>
                                        <li><a href="#"><i class="fa fa-clock-o"></i> Aug 8,2016</a></li>
                                        <li><a href="#"><i class="fa fa-commenting-o"></i> 500</a></li>
                                        <li><a href="#"><i class="fa fa-eye"></i> 1928</a></li>
                                    </ul>
                                </div>
                            </div>
                        </div>
                    </div>

                </div>
            </div>

            <div class="col-lg-3 col-md-3 col-sm-12 col-xs-12" >

                <div class="sidebar-area-standard">

                    @Html.Action("Categories", "Home")

                    @Html.Action("Advertisement", "Home")

                    @Html.Action("TopArticle", "Home")



                </div>
            </div>
        </div>
    </div>
</div>
<!-- post-content-area-end -->
