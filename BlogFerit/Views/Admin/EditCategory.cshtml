@model BlogFerit.DataEntities.Categories
@{
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="x_panel">
    <div class="x_title">
        <h2>Kategori yönetimi : <small>Kategori Düzenle</small></h2>

        <div class="clearfix"></div>
    </div>
    <div class="x_content">
        <div id="alerts"></div>


        <form id="form1" method="post" action="~/Admin/EditCategory" enctype="multipart/form-data">

            <div class="item form-group">
                <div class="col-md-12 col-sm-12 ">
                    <label for="sel1">Kategori Adı:</label>
                    <input type="text" name="CategoryName" id="first-name" placeholder="" required="required" value="@Model.CategoryName" class="form-control ">
                </div>
            </div>


            <div class="item form-group">
                <div class="col-md-12 col-sm-12 ">
                    <input type="hidden" name="IsDelete" value="@Model.IsDelete">
                    <input type="hidden" name="Id" value="@Model.Id">
                </div>
            </div>

            <div class="item form-group">
                <div class="col-md-12 col-sm-12 ">
                    <input type="submit" class="btn btn-info btn-lg">
                </div>
            </div>
        </form>
    </div>
</div>

