
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<!-- post-content-area-start -->
<div class="post-content-area ptb-80 standard-post">
    <div class="container">
        <div class="row" style="background-color: white;">
            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">

                <div class="post-top">
                    <div style="padding:5%;">
                        <h3>
                            <i class="fa fa-whatsapp" style="
                                                    font-size: 1.5em;
                                                    vertical-align: middle;
                                                    width: 1.4em;
                                                    text-align:center;
                                                    max-width: 1.4em;
                                                    min-width: 1.4em;
                                                    padding: 0.1em;
                                                    background-color: green;
                                                    color: white;
                                                    border-radius: 0.1em;"></i> @Model.Phone
                                                </h3>
                                                <h3>
                                                    <i class="fa fa-envelope-o" style="font-size: 1.5em;
                        vertical-align: middle;
                        padding: 0.1em;
                        background-color: red;
                        color: white;
                        width: 1.4em;
                        text-align: center;
                        max-width: 1.4em;
                        min-width: 1.4em;
                        text-align: center;
                        border-radius: 0.1em;
                    "></i> @Model.Email
                </h3>
                </div>
                <hr />
                <div style="padding:5%;">
                    <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d1105.899285534199!2d27.151792938749384!3d38.37315003196029!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x14bbdf4746080a27%3A0x8c8b9672e1eeabb7!2s289.%20Sk.%2C%2035380%20Buca%2F%C4%B0zmir!5e0!3m2!1str!2str!4v1605789237659!5m2!1str!2str" height="450" frameborder="0" style="width:100%;border:0;" allowfullscreen="" aria-hidden="false" tabindex="0"></iframe>

                </div><hr />
                    <div style="padding:5%;">
                        <form>
                            <div class="form-group">
                                <label for="exampleInputEmail1">Email address</label>
                                <input type="email" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="Enter email">
                                <small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone else.</small>
                            </div>
                            <div class="form-group">
                                <label for="exampleInputPassword1">Telefon : </label>
                                <input type="tel" class="form-control" placeholder="">
                            </div>

                            <div class="form-group">
                                <label for="exampleInputPassword1">E-posta : </label>
                                <input type="email" class="form-control" placeholder="">
                            </div>

                            <div class="form-group">
                                <label for="exampleInputPassword1">Mesajınız : </label>
                                <textarea type="text" class="form-control" placeholder=""></textarea>
                            </div>
                            <button type="submit" class="btn btn-primary">Submit</button>
                        </form>
                    </div>

                </div>
                </div>

</div>


</div>
</div>

<!-- post-content-area-end -->
